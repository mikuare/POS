# ==============================================
# POS SYSTEM - Environment Configuration
# ==============================================
# Copy this file to .env and fill in your actual values

# ----------------------------------------------
# Server Configuration
# ----------------------------------------------
PORT=4000
APP_BASE_URL=http://localhost:4000

# ----------------------------------------------
# Payment Provider Selection
# ----------------------------------------------
# Options: 'paymongo' or 'mock'
# Use 'mock' for testing without real payment gateway
# Use 'paymongo' for real GCash payments via PayMongo
PAYMENT_PROVIDER=paymongo

# ----------------------------------------------
# PayMongo Configuration (Test Mode)
# ----------------------------------------------
# Get your test keys from: https://dashboard.paymongo.com/developers/api-keys
# IMPORTANT: Use TEST keys (starting with sk_test_) for development

# Required: Your PayMongo Secret Key (Test Mode)
# Format: sk_test_xxxxxxxxxxxxxxxxxxxxx
PAYMONGO_SECRET_KEY=

# Optional: PayMongo API Base URL (default: https://api.paymongo.com/v1)
PAYMONGO_API_BASE_URL=https://api.paymongo.com/v1

# Optional: Success/Cancel URLs (defaults to APP_BASE_URL if not set)
PAYMONGO_SUCCESS_URL=http://localhost:4000/
PAYMONGO_CANCEL_URL=http://localhost:4000/

# Required for Webhooks: PayMongo Webhook Secret
# Get this from: https://dashboard.paymongo.com/developers/webhooks
# Format: whsec_xxxxxxxxxxxxxxxxxxxxx
PAYMONGO_WEBHOOK_SECRET=

# ----------------------------------------------
# Supabase Configuration (Optional)
# ----------------------------------------------
# Leave empty to use in-memory storage
# Set these to persist transactions to Supabase

# Your Supabase Project URL
# Format: https://xxxxxxxxxxxxx.supabase.co
SUPABASE_URL=

# Your Supabase Service Role Key (from Project Settings > API)
# Format: eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=

# Supabase Mode: 'cloud' or 'local' (default: cloud)
SUPABASE_MODE=cloud
